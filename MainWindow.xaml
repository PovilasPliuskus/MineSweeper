<Window x:Class="MineSweeper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MineSweeper"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="MineSweeper" Height="275" Width="200" Icon="images/icon.ico">
    <StackPanel>
        <Menu>
            <MenuItem Header="New Game">
                <MenuItem Header="Begginer"/>
                <MenuItem Header="Advanced"/>
                <MenuItem Header="Expert"/>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="About"/>
                <MenuItem Header="Rules"/>
            </MenuItem>
        </Menu>
        <Border BorderThickness="2">
            <StackPanel>
                <TextBlock Text="Bombs left: "/>
                <TextBlock Text="Time: "/>
            </StackPanel>
        </Border>
        <Grid Name="gameGrid" ShowGridLines="True" />
    </StackPanel>
</Window>
